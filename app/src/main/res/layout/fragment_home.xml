<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/window_background">

            <!-- STEP 1: All content hidden -->
            
            <!-- Section: Berita Terkini (Step 3) -->
            <LinearLayout
                android:id="@+id/sectionHeadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

            <TextView
                android:id="@+id/tvHeadlineSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/headline_section"
                android:textSize="@dimen/text_section_title"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:paddingHorizontal="@dimen/spacing_medium"
                android:paddingTop="@dimen/spacing_medium"
                android:paddingBottom="@dimen/spacing_small" />

            <!-- Headline Carousel -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/headline_height"
                android:layout_marginHorizontal="@dimen/spacing_medium">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/vpHeadline"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <!-- Arrow Left -->
                <ImageButton
                    android:id="@+id/btnArrowLeft"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_arrow_button"
                    android:src="@drawable/ic_arrow_left"
                    android:contentDescription="@string/previous"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <!-- Arrow Right -->
                <ImageButton
                    android:id="@+id/btnArrowRight"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_arrow_button"
                    android:src="@drawable/ic_arrow_right"
                    android:contentDescription="@string/next"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <ProgressBar
                    android:id="@+id/progressHeadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/layoutErrorHeadline"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvErrorHeadline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/error_load_headline"
                        android:textColor="@color/text_secondary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRetryHeadline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:text="@string/retry"
                        style="@style/Widget.Material3.Button.TextButton" />

                </LinearLayout>

            </FrameLayout>

            <!-- Custom Indicator Dots -->
            <LinearLayout
                android:id="@+id/indicatorContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/spacing_small"
                android:orientation="horizontal"
                android:padding="4dp" />

            </LinearLayout>
            <!-- END Section: Berita Terkini -->

            <!-- Category Chips (Step 8) -->
            <HorizontalScrollView
                android:id="@+id/scrollViewCategories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:paddingVertical="@dimen/spacing_small"
                android:visibility="visible">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupCategories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/spacing_medium"
                    app:singleSelection="true"
                    app:selectionRequired="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipAll"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/category_all"
                        android:checked="true" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipBusiness"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/category_business" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipTechnology"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/category_technology" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipSports"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/category_sports" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipEntertainment"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/category_entertainment" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipPolitics"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/category_politics" />

                </com.google.android.material.chip.ChipGroup>

            </HorizontalScrollView>
            <!-- END Category Chips -->

            <!-- Section: Semua Berita (Step 4) -->
            <LinearLayout
                android:id="@+id/sectionAllNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

            <TextView
                android:id="@+id/tvAllNewsSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/all_news_section"
                android:textSize="@dimen/text_section_title"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:paddingHorizontal="@dimen/spacing_medium"
                android:paddingTop="@dimen/spacing_large"
                android:paddingBottom="@dimen/spacing_small" />

            <!-- All News List -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvAllNews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:paddingHorizontal="@dimen/spacing_medium"
                    android:clipToPadding="false"
                    tools:listitem="@layout/item_news" />

                <ProgressBar
                    android:id="@+id/progressAllNews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/layoutErrorAllNews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="@dimen/spacing_large"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvErrorAllNews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/error_load_news"
                        android:textColor="@color/text_secondary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRetryAllNews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:text="@string/retry"
                        style="@style/Widget.Material3.Button.TextButton" />

                </LinearLayout>

            </FrameLayout>

            </LinearLayout>
            <!-- END Section: Semua Berita -->

            <!-- Loading More Indicator -->
            <ProgressBar
                android:id="@+id/progressLoadMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/spacing_medium"
                android:visibility="gone"
                style="?android:attr/progressBarStyleSmall" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_large" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
